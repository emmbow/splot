<div class="container">
  <h1 class="title-plot-index">Plots</h1>
  <div class="plot-grid row no-gutters">
    <% @plots.each do |plot|%>
      <div class="plot-card col-6 col-md-4 col-lg-3" style="background-image:  url(<%= plot.image_url %>);">
        <h1><%= plot.plot_number %></h1>
        <p><i class="fas fa-map-pin"></i> <%= plot.site.name %></p>
        <!-- <img src= <%= plot.image_url %> alt="various plots" height="250" width="250"> -->
      </div>
    <% end %>
  </div>
</div>

